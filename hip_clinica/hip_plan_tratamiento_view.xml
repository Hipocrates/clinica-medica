<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <record id="plan_tratamiento_view_tree" model="ir.ui.view">
            <field name="name">plan.tratamiento.view.tree</field>
            <field name="model">plan.tratamiento</field>
            <field name="arch" type="xml">
	            <tree string="Plan tratamiento">
	            	<field name="name"/>
	            	<field name="id_paciente"/>
	            	<field name="id_diagnostico"/>
		            <field name="fecha"/>
		            <field name="estatus"/>
		            <field name="id_alumno"/>
		            <field name="id_maestro"/>
		            
	            </tree>
            </field>
        </record> 
    
		<record id="plan_tratamiento_view_form" model="ir.ui.view">
            <field name="name">plan.tratamiento.view.form</field>
            <field name="model">plan.tratamiento</field>
            <field name="arch" type="xml">
	            <form string="Plan tratamiento">	            	
	            	<group>
	            		<group>
	            			<field name="name"/>
	            			<field name="id_paciente"/>
		            		<field name="id_diagnostico"/>
	            		</group>
	            		<group>
	            			<field name="fecha"/>
		            		<field name="estatus"/>
		            		<field name="id_alumno"/>
				            <field name="id_maestro"/>	
	            		</group>
	            	</group>	            			            
		            <notebook colspan="4">
		            	<page string="Detalle Tratamientos">
		            		<field name="tratamiento_ids" nolabel="1">
		            			<tree string="Detalles" editable="bottom">	
		            				<field name="id_cat_tratamiento"/>
		            				<field name="orden"/>
		            			</tree>
		            		</field>		            		
		            	</page>
		            </notebook>		            
	            </form>
            </field>
        </record> 
        
        <record id="action_plan_tratamiento" model="ir.actions.act_window">
				<field name="name">Plan tratamiento</field> 
				<field name="res_model">plan.tratamiento</field>	 
				<field name="type">ir.actions.act_window</field> 
				<field name="view_type">form</field>  
				<field name="view_mode">tree,form</field>
				<field name="view_id" ref="plan_tratamiento_view_tree" /> 
				<field name="context">{}</field>
				<field name="target">current</field>
		</record>

		<menuitem id="menu_plan_tratamiento"
					parent="menu_clinica_consulta"
					action="action_plan_tratamiento"
		/>
    </data>
</openerp>